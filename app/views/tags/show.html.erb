<h1 class="mb-3"><%= @tag.name %></h1>

<h3 class="text-primary mb-3">Total Books: <%= @books.size %></h3>

<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
  <% @books.each do |book| %>
    <%= render 'layouts/components/book-card', book: book, show_more: true %>
  <% end %>
</div>

<%= paginate @books %>

<%= link_to 'Back', :back, class: 'w-25 btn btn-lg btn-outline-secondary mb-3' %>