<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Approved</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>
        <td><%= comment.approved %></td>
        <td><%= comment.user_id %></td>
        <td><%= link_to 'Show', book_comment_path(@book, comment) %></td>
        <td><%= link_to 'Edit', edit_book_comment_path(@book, comment) %></td>
        <td><%= link_to 'Destroy', book_comment_path(@book, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_book_comment_path(@book) %> |
